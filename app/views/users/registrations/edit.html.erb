
<h2>Edit <%= resource_name.to_s.humanize %></h2>
  <br><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <b>Behandler oplysning</b>
  <br><br>

  <div class=”field”> (Upload your new profile picture below!)
  <%= f.file_field :practitioner_image %> </div>


<div>
  <% if @user.practitioner_image.attached? %>
    <%= image_tag @user.practitioner_image.variant(resize: "100x100") %>
  <% end %>
  
</div>
  <div class="field">
    <%= f.label :gender %><br />&nbsp;&nbsp;&nbsp;
   <%=  f.collection_radio_buttons :gender, User.genders.map{ |a| [a.first,a.first] },  :first, :second %>
                       
  </div>

  <div class="field">
    <%= f.label :practitioner_first_name %><br />
    <%= f.text_field :practitioner_first_name, autofocus: true, autocomplete: "Fornavn" %>
  </div>

    <div class="field">
    <%= f.label :practitioner_last_name %><br />
    <%= f.text_field :practitioner_last_name, autofocus: true, autocomplete: "Efternavn" %>
  </div>

    <div class="field">
    <%= f.label :practitioner_description %><br />
    <%= f.text_field :practitioner_description, autofocus: true, autocomplete: "Beskrivelse af behandler" %>
  </div>

      <div class="field">
    <%= f.label :practitioner_mail %><br />
    <%= f.text_field :practitioner_mail, autofocus: true, autocomplete: "E-mail" %>
  </div>

      <div class="field">
    <%= f.label :practitioner_phone %><br />
    <%= f.text_field :practitioner_phone, autofocus: true, autocomplete: "Tlf. nr." %>
  </div>

        <div class="field">
    <%= f.label :practitioner_website %><br />
    <%= f.text_field :practitioner_website, autofocus: true, autocomplete: "Hjemmeside" %>
  </div>

          <div class="field">
    <%= f.label :public_health_insurance %><br />
    <%= f.check_box :public_health_insurance, autofocus: true, autocomplete: "Hjemmeside" %>
  </div>

  <br><br><br>
 
<b>Klikkens oplysninger</b>
<br><br>

  <div class=”field”> (Upload your new profile picture below!)
  <%= f.file_field :clinic_logo %> </div>




<div>
  <% if @user.clinic_logo.attached? %>
    <%= image_tag @user.clinic_logo.variant(resize: "100x100") %>

  <% end %>
  
</div>


  <div class=”field”> (Upload your new clinic pictures below!)
  <%= f.file_field :clinic_images %> </div>

<div>
<% if @user.clinic_images.attached? %>
<p>
  <strong>Images:</strong>
  <br>
  <% @user.clinic_images.each do |image| %>
    <%= image_tag(image.variant(resize: "100x100")) %>
  <% end %>
</p>
<% end %>
</div>
