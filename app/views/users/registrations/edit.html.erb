  </div>

    <div class="field">
    <%= f.label :clinic_city %><br />
    <%= f.text_field :clinic_city, autofocus: true, autocomplete: "By" %>
  </div>

  <div class="field">
    <%= f.label :clinic_municipality %><br />
    <%= f.text_field :clinic_municipality, autofocus: true, autocomplete: "Kommune" %>
  </div>

